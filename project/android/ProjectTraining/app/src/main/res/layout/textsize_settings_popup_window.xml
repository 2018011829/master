<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#292c29"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/jianxiaoliangdu"
                android:layout_weight="1"/>

            <SeekBar
                android:id="@+id/seekbar_change_light"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="8"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/zengdaliangdu"
                android:layout_weight="1"/>

        </LinearLayout>

        <View

            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_change_text_small"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:src="@mipmap/jianxiaoziti"/>

            <TextView
                android:id="@+id/tv_show_text_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_change_text_big"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@mipmap/zengdaziti"/>

            <TextView
                android:id="@+id/tv_change_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="字体"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>