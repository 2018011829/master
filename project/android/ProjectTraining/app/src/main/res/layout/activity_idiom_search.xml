<LinearLayout android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/search_idiom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_border">

        <ImageView
            android:id="@+id/iv_searchImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/tv_search_idiom"
            android:textSize="16sp"
            android:layout_height="36dp"
            android:background="#FAFAFA"
            android:hint="请输成语相关信息"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_searchImg"
            android:layout_toLeftOf="@+id/idiom_delete_edit"/>

        <ImageView
            android:id="@+id/idiom_delete_edit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fengeImg" />

        <ImageView
            android:id="@+id/fengeImg"
            android:src="@drawable/fenge"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/cancel_searchIdiom" />

        <Button
            android:id="@+id/cancel_searchIdiom"
            android:text="取消"
            android:background="#00000000"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_result_null"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lv_idiom_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>