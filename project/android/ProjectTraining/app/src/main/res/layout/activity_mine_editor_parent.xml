<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_toback"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/idiom_back"/>
                <TextView
                    android:text="返回"
                    android:textSize="20sp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:textSize="22sp"
                android:text="编辑资料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mine_editorParent_head"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <LinearLayout
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="@drawable/text_view_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:src="@drawable/fenge"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/edt_mine_editorName"
                android:textSize="20sp"
                android:background="@null"
                android:hint="请填写用户昵称"
                android:paddingLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_mine_editorCommit"
            android:text="修改"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>