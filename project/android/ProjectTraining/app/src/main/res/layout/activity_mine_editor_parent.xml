<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_mine_editorParent_head"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/text_view_border"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:paddingLeft="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="昵称"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <EditText
                android:id="@+id/edt_mine_editorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_alignParentRight="true"
                android:hint="某人昵称"
                android:textSize="20sp"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:cursorVisible="false"
                android:background="@null"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine_editorParent_sex"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/text_view_border"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:paddingLeft="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="性别"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_mine_edit_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="男"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#D3D3D3"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_mine_editorCommit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="25sp"
            android:layout_margin="30dp"
            android:background="@android:color/holo_orange_light"/>
    </LinearLayout>


</LinearLayout>