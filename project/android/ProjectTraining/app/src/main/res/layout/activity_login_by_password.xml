<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="密码登录"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_center_border">
        <ImageView
            android:src="@drawable/phone_num"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:src="@drawable/part"
            android:layout_width="20dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:inputType="number"
            android:hint="请输入手机号"
            android:layout_height="40dp"
            android:textColor="@color/white0"
            android:layout_width="match_parent"
            android:textColorHint="@color/white0"
            android:background="@color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_center_border">
        <ImageView
            android:src="@drawable/password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:src="@drawable/part"
            android:layout_width="20dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_height="40dp"
            android:hint="请输入6~20位密码"
            android:inputType="textPassword"
            android:textColor="@color/white0"
            android:layout_width="match_parent"
            android:textColorHint="@color/white0"
            android:background="@color/transparent"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login_by_msg"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="验证码登录？"
            android:textColor="@color/white0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_register"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="新用户注册？"
            android:textColor="@color/white0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:text="登  录"
        android:textSize="18sp"
        android:textColor="#FF9900"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/full_circle_button"/>

</LinearLayout>