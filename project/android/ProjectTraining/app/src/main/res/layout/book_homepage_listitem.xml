<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/xiaogang"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_get_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="更多"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_get_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/qianjin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img1"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img2"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img3"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img4"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img5"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_img6"
                android:layout_width="90dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>